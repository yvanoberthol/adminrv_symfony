{% extends 'base.html.twig' %}
{% block title %}
    {{ 'specialite.formadd.nav_title'|trans }}
{% endblock %}

{% block navbar %}
    {% include 'commons/navbar.html.twig' %}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="grand-titre">{{ 'specialite.formadd.title'|trans }}</h1>
            {% if (specialiteNameExist is defined) and (specialiteNameExist == true) %}
                <div class="text-center bg-danger font-weight-bold" style="color:white">
                    <span class="fa fa-times-circle"></span> {{ 'specialite.formadd.specialiteNameExist'|trans }}
                </div>
            {% endif %}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.description) }}
            <div class="form-group">
                <button type="submit" class="btn" style="background-color: purple; color:white"><span
                            class="fa fa-plus-circle"></span> {{ 'specialite.formadd.form.btn_add'|trans }}
                </button>
                <a href="{{ path('specialites') }}">{{ 'specialite.formadd.back_list'|trans }}</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        ClassicEditor
            .create(document.querySelector('#specialite_description'))
            .catch(error => {
                console.error(error);
            })
    </script>
{% endblock %}