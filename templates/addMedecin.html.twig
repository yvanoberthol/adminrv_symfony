{% extends 'base.html.twig' %}
{% block title %}
    {{ 'medecin.formadd.nav_title'|trans }}
{% endblock %}

{% block navbar %}
    {% include 'commons/navbar.html.twig' %}
{% endblock %}
{% block body %}
    {% if medecin is defined %}
        {{ medecin.nom }}
    {% endif %}
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="grand-titre">{{ 'medecin.formadd.title'|trans }}</h1>
            {% if medecinNameExist is defined and medecinNameExist == true %}
                <div class="text-center alert alert-danger font-weight-bold">
                    <span class="fa fa-times-circle"></span> {{ 'medecin.formadd.medecinNameExist'|trans }}
                </div>
            {% endif %}
            {{ form_start(form) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.matricule) }}
                {{ form_row(form.email) }}
                {{ form_row(form.telephone) }}
                {{ form_row(form.ville) }}
                {{ form_row(form.date_naissance) }}
                {{ form_row(form.image) }}
                {{ form_row(form.specialites) }}
                <div class="form-group">
                    <button type="submit" class="btn" style="background-color: purple; color:white"><span
                                class="fa fa-plus-circle"></span> {{ 'medecin.formadd.form.btn_add'|trans }}
                    </button>
                    <a href="{{ path('medecins') }}">{{ 'medecin.formadd.back_list'|trans }}</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.selectpicker').selectpicker();
        });
    </script>
{% endblock %}